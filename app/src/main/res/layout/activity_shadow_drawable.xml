<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/shadow_drawable_activity_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:id="@+id/shadow_drawable_activity_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:src="@mipmap/ic_launcher"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shadow_drawable_activity_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:padding="15dp"
                android:text="左右"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shadow_drawable_activity_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:padding="15dp"
                android:text="左上"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shadow_drawable_activity_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:padding="15dp"
                android:text="右下"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>